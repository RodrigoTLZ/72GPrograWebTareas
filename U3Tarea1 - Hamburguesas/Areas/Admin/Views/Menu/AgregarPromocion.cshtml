@model U3Tarea1___Hamburguesas.Areas.Admin.Models.ViewModels.AdminAgregarPromocionViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<form method="post" action="~/Admin/Menu/AgregarPromocion">
    <h1>Agregar un descuento de promoción</h1>
    <input type="hidden" asp-for="Id" />
    <span>
        <label for="nombre">Nombre:</label>
        <input type="text" readonly id="nombre" required asp-for="Nombre">
    </span>
    <span>
        <label for="precio">Precio real:</label>
        <input type="text" id="precio" readonly required asp-for="PrecioReal">
    </span>
    <span>
        <label for="promocion">Precio promoción:</label>
        <input type="text" id="promocion" required asp-for="PrecioPromocion">
    </span>
    <span class="error">@Html.ValidationSummary(true)</span>

    <div class="botones">
        <input type="submit" value="Agregar" />
        <a href="~/Admin/Menu/Index">
            <input type="button" value="Cancelar" />
        </a>
    </div>
</form>