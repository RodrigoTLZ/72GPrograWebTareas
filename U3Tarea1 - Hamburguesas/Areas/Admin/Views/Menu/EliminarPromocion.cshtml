@model U3Tarea1___Hamburguesas.Areas.Admin.Models.ViewModels.AdminAgregarPromocionViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<form method="post" action="~/Admin/Menu/EliminarPromocion">

    <h1>Eliminar promoción</h1>
    <input type="hidden" asp-for="Id" />
    <span class="pregunta"><b>¿Desea eliminar la promoción del menú?</b></span>
    <span>
        <label for="nombre">Nombre:</label>
        <input type="text" readonly id="nombre" required asp-for="Nombre">
    </span>
    <span>
        <label for="precio">Precio real:</label>
        <input type="text" readonly id="precio" required asp-for="PrecioReal">
    </span><span>
        <label for="promocion">Precio promoción:</label>
        <input type="text" readonly id="promocion" required asp-for="PrecioPromocion">
    </span>
    <span class="error">@Html.ValidationSummary(true)</span>

    <div class="botones">
        <input type="submit" value="Si" />
        <a href="~/Admin/Menu/Index">
            <input type="button" value="No" />
        </a>
    </div>
</form>

<script>

    function previewImagen() {
        const inputImagen = document.getElementById('imagen');
        const imagenPreview = document.getElementById('imagen-preview');

        const archivoImagen = inputImagen.files[0];

        if (archivoImagen) {
            const lector = new FileReader();

            lector.onload = function (e) {
                imagenPreview.src = e.target.result;
                imagenPreview.style.display = 'block';
            };

            lector.readAsDataURL(archivoImagen);
        } else {
            imagenPreview.src = '#';
            imagenPreview.style.display = 'none';
        }
    }
</script>

