@model U3Tarea1___Hamburguesas.Models.ViewModels.PromocionViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<section class="menu1">
    <img src="~/hamburguesas/@(Model.Id).png" />
    <div class="datos">
        <h3>
            <del>@Model.Precio.ToString("c")</del>
            <b>@Model.PrecioPromocion?.ToString("c")</b>
        </h3>
        <h2>@Model.MenuNombre</h2>
        <p>@Model.Descripcion</p>
    </div>
    <span>
        <a href="~/Home/Promociones/@Model.MenuSiguiente.Replace(" ","-")">&lt;</a>
        <a href="~/Home/Promociones/@Model.MenuAnterior.Replace(" ","-")">&gt;</a>
    </span>
</section>
